
INCLUDE ZSHCATTOP                               .    " global Data

INCLUDE ZSHCATO01                               .  " PBO-Modules
INCLUDE ZSHCATI01                               .  " PAI-Modules
INCLUDE ZSHCATF01                               .  " FORM-Routines

*&SPWIZARD: FUNCTION CODES FOR TABSTRIP 'ZSHCAT'
CONSTANTS: BEGIN OF C_ZSHCAT,
             TAB1 LIKE SY-UCOMM VALUE 'ZSHCAT_FC1',
             TAB2 LIKE SY-UCOMM VALUE 'ZSHCAT_FC2',
             TAB3 LIKE SY-UCOMM VALUE 'ZSHCAT_FC3',
           END OF C_ZSHCAT.
*&SPWIZARD: DATA FOR TABSTRIP 'ZSHCAT'
CONTROLS:  ZSHCAT TYPE TABSTRIP.
DATA:      BEGIN OF G_ZSHCAT,
             SUBSCREEN   LIKE SY-DYNNR,
             PROG        LIKE SY-REPID VALUE 'ZSH_OS_CATEGORIES',
             PRESSED_TAB LIKE SY-UCOMM VALUE C_ZSHCAT-TAB1,
           END OF G_ZSHCAT.
DATA:      OK_CODE LIKE SY-UCOMM.

*&SPWIZARD: OUTPUT MODULE FOR TS 'ZSHCAT'. DO NOT CHANGE THIS LINE!
*&SPWIZARD: SETS ACTIVE TAB
MODULE ZSHCAT_ACTIVE_TAB_SET OUTPUT.
  ZSHCAT-ACTIVETAB = G_ZSHCAT-PRESSED_TAB.
  CASE G_ZSHCAT-PRESSED_TAB.
    WHEN C_ZSHCAT-TAB1.
      G_ZSHCAT-SUBSCREEN = '1001'.
    WHEN C_ZSHCAT-TAB2.
      G_ZSHCAT-SUBSCREEN = '1002'.
    WHEN C_ZSHCAT-TAB3.
      G_ZSHCAT-SUBSCREEN = '1003'.
    WHEN OTHERS.
*&SPWIZARD:      DO NOTHING
  ENDCASE.
ENDMODULE.

*&SPWIZARD: INPUT MODULE FOR TS 'ZSHCAT'. DO NOT CHANGE THIS LINE!
*&SPWIZARD: GETS ACTIVE TAB
MODULE ZSHCAT_ACTIVE_TAB_GET INPUT.
  OK_CODE = SY-UCOMM.
  CASE OK_CODE.
    WHEN C_ZSHCAT-TAB1.
      G_ZSHCAT-PRESSED_TAB = C_ZSHCAT-TAB1.
    WHEN C_ZSHCAT-TAB2.
      G_ZSHCAT-PRESSED_TAB = C_ZSHCAT-TAB2.
    WHEN C_ZSHCAT-TAB3.
      G_ZSHCAT-PRESSED_TAB = C_ZSHCAT-TAB3.
    WHEN OTHERS.
*&SPWIZARD:      DO NOTHING
  ENDCASE.
ENDMODULE.
